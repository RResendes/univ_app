
<div class="row sign-up-form">
    <div class="col s12 m12 center">
        <div class="card blue-grey darken-1 center">
        <div class="card-content white-text">
            <span class="card-title"><strong>Name</strong>: <%= @student.name %></span>
            <p><strong>Email</strong>: <%= @student.email %><p>
            <p>Course Enrollments:
            <% if @student.courses.empty? %> 
                None
            <% else %>
                <ul>
                    <% @student.courses.each do |course| %>
                        <li><%= course.name %></li>
                    <% end %>
                </ul>
            <% end %>
        </div>
        </div>
        <% if current_user == @student %>
            <%= link_to '<i class="material-icons right">create</i>Edit your profile'.html_safe , edit_student_path(@student), class: "waves-effect waves-light btn" %>
        <% end %>
    </div>
</div>
